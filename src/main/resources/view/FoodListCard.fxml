<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane HBox.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
        </columnConstraints>
        <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
            <padding>
                <Insets bottom="5" left="15" right="5" top="5" />
            </padding>
            <HBox alignment="CENTER_LEFT" spacing="5">
                <Label fx:id="id" styleClass="cell_big_label">
                    <minWidth>
                        <!-- Ensures that the label text is never truncated -->
                        <Region fx:constant="USE_PREF_SIZE" />
                    </minWidth>
                </Label>
                <Label fx:id="name" styleClass="cell_big_label" text="\$name" />
            </HBox>
            <FlowPane fx:id="tags" />
         <HBox alignment="CENTER_LEFT" layoutX="25.0" layoutY="79.0" spacing="5">
            <children>
               <Label fx:id="id11" styleClass="cell_small_label_constants" text="Qty: ">
                  <minWidth>
                     <Region fx:constant="USE_PREF_SIZE" />
                  </minWidth>
               </Label>
                  <Label fx:id="quantity" styleClass="cell_small_label" text="\$quantity" />
            </children>
         </HBox>
         <HBox alignment="CENTER_LEFT" layoutX="25.0" layoutY="29.0" spacing="5">
            <children>
               <Label fx:id="id1" styleClass="cell_small_label_constants" text="Unit: ">
                  <minWidth>
                     <Region fx:constant="USE_PREF_SIZE" />
                  </minWidth>
               </Label>
                  <Label fx:id="unit" styleClass="cell_small_label" text="\$unit" />
            </children>
         </HBox>
         <HBox alignment="CENTER_LEFT" layoutX="25.0" layoutY="88.0" spacing="5">
            <children>
               <Label fx:id="id111" styleClass="cell_small_label_constants" text="Expiry: ">
                  <minWidth>
                     <Region fx:constant="USE_PREF_SIZE" />
                  </minWidth>
               </Label>
               <Label fx:id="expiryDate" styleClass="cell_small_label" text="\$expiryDate" />
            </children>
         </HBox>
        </VBox>
      <rowConstraints>
         <RowConstraints />
      </rowConstraints>
    </GridPane>
</HBox>
